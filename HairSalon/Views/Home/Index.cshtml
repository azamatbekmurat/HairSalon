@{
  Layout = "_Layout";
}

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>List of stylists</h2>
      <hr>
      @if (Model != null)
      {
          <ul>
            @foreach (var stylist in Model)
            {
              <a href="/Stylist/@stylist.GetId()"><li>@stylist.GetName()</li></a>
            }
          </ul>
      }
      @if (Model.Count == 0)
      {
        <h4> There is no stylists at the moment</h4>
        <br>
      }

      <a href="/stylist/new"><button type="button" class="btn">Add a Stylist</button></a>
      <a href="/stylist/clear"><button type="button" class="btn">Delete All Stylists</button></a>
    </div>
  </div>
</div>
